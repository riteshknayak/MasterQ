<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/parent_view_background"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/question_index"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/bg_color_circular_view"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/selected_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/question_index"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/question_index"
        app:layout_constraintStart_toEndOf="@+id/question_index"
        app:layout_constraintTop_toTopOf="@+id/question_index"
        android:text="option 1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/selected_option"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:paddingStart="15dp"
        android:visibility="gone"
        android:paddingTop="20dp"
        android:paddingEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_option">

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="where is the jnasofdgdfn jhsfv l; sfvjjsfvnzxfcv?" />

        <LinearLayout
            android:id="@+id/option_1_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_color_background"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question">

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circular_view"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="This is option 1" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_2_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_color_background"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/option_1_view">

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circular_view"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="@string/b"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="This is option 2" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_3_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_color_background"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/option_2_view"
            tools:layout_editor_absoluteX="15dp">

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circular_view"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="This is option 3" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_4_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:background="@drawable/bg_color_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/option_3_view">

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circular_view"
                android:gravity="center"
                android:text="@string/d"
                android:paddingBottom="3dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_bold" />

            <TextView
                android:id="@+id/option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is option 4"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginStart="15dp"
                android:textSize="18sp"/>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>