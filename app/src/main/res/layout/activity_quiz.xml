    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/questionc"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <!--127--><!--139-->
        <!--104--><!--116-->


        <TextView
            android:id="@+id/questionCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/pink"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Question 1" />


        <TextView
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/questionCounter"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/nunito_bold"
            android:text="/10"
            android:textColor="@color/pink"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/questionCounter"
            app:layout_constraintStart_toEndOf="@+id/questionCounter" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.timqi.sectorprogressview.ColorfulRingProgressView
        android:id="@+id/time_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        app:bgColor="@color/color_on_bg"
        app:fgColorEnd="#630CAE"
        app:fgColorStart="#CA1395"
        app:layout_constraintBottom_toTopOf="@+id/questionc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        app:layout_constraintVertical_bias="0.1"
        app:percent="100"
        app:startAngle="0"
        app:strokeWidth="10dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="10"
        android:textSize="23sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/time_view"
        app:layout_constraintEnd_toEndOf="@+id/time_view"
        app:layout_constraintStart_toStartOf="@+id/time_view"
        app:layout_constraintTop_toTopOf="@+id/time_view" />

    <TextView
        android:id="@+id/question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionc"
        tools:text="Who invented android studio?" />

